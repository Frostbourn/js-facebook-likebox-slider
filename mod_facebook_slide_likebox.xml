<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade">
    <name>JS Like Box Slider</name>
    <author>Jakub Skowro≈Ñski</author>
    <creationDate>2013-07-15</creationDate>
    <copyright>Copyright (C) 2013 - https://jakubskowronski.com All rights reserved.</copyright>
    <license>GPL 2.0</license>
    <authorEmail>kontakt@jakubskowronski.com</authorEmail>
    <authorUrl>https://jakubskowronski.com</authorUrl>
    <version>6.7.0</version>
    <description>
        <![CDATA[<div><a title="" href="https://jakubskowronski.com" target="_blank"><img style="display: block; margin-left: auto; margin-right: auto;" src="https://jsns.eu/images/logo-website.fw.png" alt=""></a><br><br>
        <br><br></div><h3>Troubleshooting</h3><div>1. What is the best position for the module?</div><ul><li>The best positions: debug or footer</li></ul><div>2. How can I find my social channel ID?</div><ul><li>Look at the Documentation here: <a href="https://github.com/Frostbourn/js-facebook-likebox-slider/" target="_blank" rel="alternate">CLICK</a></li></ul>
        ]]>
    </description>
    <files>
        <filename>mod_facebook_slide_likebox.xml</filename>
        <filename module="mod_facebook_slide_likebox">mod_facebook_slide_likebox.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <updateservers>
        <server type="extension" priority="1" name="JS Like Box Slider">https://jakubskowronski.com/joomla/mod_facebook_slide_likebox/update.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="Module Class Suffix"/>
                <field name="show_on_mobile" type="radio" class="btn-group" default="1" label="Show on mobile devices" description="">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="position" type="list" default="0" label="Position" description="">
                    <option value="1">Left</option>
                    <option value="0">Right</option>
                </field>
                <field name="buttons_shape" type="radio" class="btn-group" default="0" label="Rounded buttons" description="Increase border-radius">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="margintop" type="text" default="10%" label="Margin top" description="Margin top"/>
                <field type="spacer" name="&lt;div style=&quot;width: 600px; color:#fff; font-size:12px; font-weight:bold; padding:3px; text-align:center; background:#3c95d9;&quot;&gt;Facebook&lt;/div&gt;"/>
                <field name="facebook" type="radio" class="btn-group" default="1" label="Display Facebook tab" description="Display Facebook tab">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field type="spacer" name="fbspacer" label="&lt;i&gt;Get Facebook ID here: www.findmyfbid.com&lt;/i&gt;" />
                <field name="profile_id" type="text" default="20531316728" label="Facebook ID" description="Page ID of the Facebook"/>
                <field type="spacer" name="&lt;div style=&quot;width: 600px; color:#fff; font-size:12px; font-weight:bold; padding:3px; text-align:center; background:#3c95d9;&quot;&gt;Twitter&lt;/div&gt;"/>
                <field name="twitter" type="radio" class="btn-group" default="1" label="Display Twitter tab" description="Display Twitter tab">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field type="spacer" name="twspacer" label="&lt;i&gt;Twitter ID is what comes after the www.twitter.com/ not the whoule URL.&lt;/i&gt;" />
                <field name="twitter_login" type="text" default="twitter" label="Twitter ID" description="Twitter ID i.eg: twitter"/>
            </fieldset>
        </fields>
    </config>
</extension>
